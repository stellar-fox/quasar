<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Fusion</name>
    <description>
        Stellar Fox Fusion Bank.
    </description>
    <author email="gszadkow@stellarfox.net" href="https://stellarfox.net">
        Stellar Fox Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-dns" spec="^1.0.2" />
    <plugin name="cordova-plugin-httpd" spec="^0.9.3" />
    <plugin name="cordova-plugin-inappbrowser-popup-bridge" spec="^1.0.17" />
    <plugin name="cordova-plugin-zeroconf" spec="^1.3.3" />
    <engine name="android" spec="^7.1.4" />
</widget>
